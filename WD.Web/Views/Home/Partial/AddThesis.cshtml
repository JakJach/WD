@model StudentAddThesisViewModel
@{
    ViewData["Title"] = "Wirtualny Dziekanat";
}

<div class="container justify-content-center">
    <form enctype="multipart/form-data" asp-controller="Student" asp-action="AddThesis" method="post">
        <p class="text-dark">Dodawanie plików pracy dyplomowej:</p>
        <div class="table">
            <table class="table-borderless">
                <thead>
                    <tr>
                        <th>Dane osób powiązanych z pracą:</th>
                        <th class="text-success">(przed dodaniem pracy upewnij się, że dane są poprawne)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Imię i nazwisko studenta:</td>
                        <td>@Model.StudentName</td>
                    </tr>
                    <tr>
                        <td>Imię i nazwisko promotora:</td>
                        <td>@Model.PromoterName</td>
                    </tr>
                    <tr>
                        <td>Imię i nazwisko recenzenta:</td>
                        <td>@Model.RevieverName</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p class="text-dark">Tytuł pracy dyplomowej:</p>
        <h3 class="text-center text-dark">@Model.Thesis.Title</h3>
        <p class="text-danger"><br/>Możliwe jest dodanie tylko plików z rozszerzeniem: .pdf, .txt, .doc, .docx, .xls, .xlsx.<br/></p>
        <div class="form-group row">
            <label asp-for="File" class="col-4 col-form-label">Główny plik pracy:</label>
            <div class="col-8">
                <div class="custom-file">
                    <input asp-for="File" class="form-control custom-file-input" accept=".xls,.xlsx,.doc,.docx,.pdf,.txt" />
                    <label class="custom-file-label">Wybierz plik</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Attachments" class="col-4 col-form-label">Załączniki:</label>
            <div class="col-8">
                <div class="custom-file">
                    <input asp-for="Attachments" class="form-control custom-file-input" accept=".xls,.xlsx,.doc,.docx,.pdf,.txt" multiple />
                    <label class="custom-file-label">Wybierz załączniki</label>
                </div>
            </div>
        </div>
        <div class="custom-checkbox">
            <input type="checkbox" name="owner_rights" required/>
            <label class="text-dark text-capitalize">Oświadczam, że wykonałem pracę samodzielnie i ponoszę odpowiedzialność karną w wypadku wykrycia plagiatu</label>
        </div>
        <div class="form-group align-self-center">
            <input type="submit" name="submit" class="btn btn-dark" value="Dodaj" />
        </div>

        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileLabel = $(this).next('.custom-file-label');
                        var files = $(this)[0].files;
                        if (files.length > 1 && files.length < 5) {
                            fileLabel.html('Wybrano ' + files.length + ' pliki');
                        }
                        else if (files.length >= 5) {
                            fileLabel.html('Wybrano ' + files.length + ' plików');
                        }
                        else if (files.length == 1) {
                            fileLabel.html(files[0].name);
                        }
                    });
                });
            </script>
        }
    </form>
</div>