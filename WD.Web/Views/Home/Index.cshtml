@model HomeViewModel
@{
    ViewData["Title"] = "AGH VD | Home";
}

<form method="get" class="mt-3">
    <div class="form-group row">
        <label asp-for="UserId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserId" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Username" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group card m-1">
        <div class="card-header">
            <h4>Roles:</h4>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment.</h5>
            }
        </div>
    </div>
</form>