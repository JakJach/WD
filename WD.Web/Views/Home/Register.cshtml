@model RegisterViewModel;
@{
    ViewData["Title"] = "Wirtualny Dziekanat";
}

<div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
            <div id="login-box" class="col-md-12">
                <form method="post" asp-controller="Home" asp-action="Register" class="mt-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h3 class="text-center text-dark">Zarejestruj użytkownika:</h3>
                    <div class="form-group">
                        <label asp-for="Email" class="text-dark">Adres email:</label><br />
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="text-dark">Imię:</label><br />
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="text-dark">Nazwisko:</label><br />
                        <input type="text" asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="text-dark">Hasło:</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form=group">
                        <label class="text-dark">Typ użytkownika:</label>
                        <div class="d-flex">
                            <div class="d-flex m-2">
                                <input type="checkbox" asp-for="IsStudent" class="form-check-inline" checked />
                                <label asp-for="IsStudent" class="text-dark form-check-inline">Student</label>
                            </div>
                            <div class="d-flex m-2">
                                <input type="checkbox" asp-for="IsTeacher" class="form-check-inline" />
                                <label asp-for="IsTeacher" class="text-dark form-check-inline">Prowadzący</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-dark" value="Zarajestruj" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
