@model LoginViewModel;
@{
    ViewData["Title"] = "Wirtualny Dziekanat - Zaloguj się";
}

<div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
            <div id="login-box" class="col-md-12">
                <form method="post" asp-controller="Account" asp-action="Login" class="mt-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h3 class="text-center text-dark">Log in:</h3>
                    <div class="form-group">
                        <label asp-for="Email" class="text-dark">E-mail Address:</label><br />
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="text-dark">Password:</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe" class="text-dark">
                                <input asp-for="RememberMe"/>
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-dark" value="Log In" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
