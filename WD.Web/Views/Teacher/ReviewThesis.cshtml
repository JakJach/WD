@model ReviewThesisViewModel
@{
    ViewData["Title"] = "AGH VD | Review Thesis";
}

<h3>Thesis Info:</h3>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Student" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Student" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Promoter" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Promoter" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Reviewer" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Reviewer" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Files" class="text-dark col-sm-2">Thesis files:</label>
        <div class="col-sm-10">
            @foreach (string filename in Model.Files)
            {
                <label class="text-dark">@filename</label>
                <a class="btn btn-dark text-white" asp-controller="Teacher" asp-action="Download" asp-route-filename="@filename">Download</a>
            }
        </div>
    </div>

    <h3>Review Thesis:</h3>

    <div class="form-group form-row">
        <label asp-for="Review" class="text-dark col-sm-2">Review:</label>
        <div class="col-sm-10">
            <textarea type="text" asp-for="Review" class="form-control"></textarea>
        </div>
        <span asp-validation-for="Review" class="text-danger"></span>
    </div>
    <div class="form-group form-row">
        <label asp-for="Note" class="text-dark col-sm-2">Final Note:</label><br />
        @Html.DropDownListFor(t => t.Note, new SelectList(Model.Options), "--Select--", new { @class = "form-control" })
    </div>
    <div class="form-group align-items-center">
        <input type="submit" name="submit" class="btn btn-success" value="Review" />
        <a asp-controller="Teacher" asp-action="Index" class="btn btn-dark">Cancel</a>
    </div>
</form>