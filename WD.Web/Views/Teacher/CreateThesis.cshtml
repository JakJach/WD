@model CreateThesisViewModel;
@{
    ViewData["Title"] = "AGH VD | Create Thesis";
}

<div class="justify-content-center align-items-center">
    <form method="post" asp-controller="Teacher" asp-action="CreateThesis" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h3 class="text-center text-dark">Create New Thesis:</h3>
        <div class="form-group form-row">
            <label asp-for="Title" class="text-dark">Title:</label>
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group form-row">
            <label asp-for="Goal" class="text-dark">Goal:</label>
            <textarea type="text" asp-for="Goal" class="form-control"></textarea>
            <span asp-validation-for="Goal" class="text-danger"></span>
        </div>
        <div class="form-group form-row">
            <label asp-for="Scope" class="text-dark">Scope:</label>
            <textarea type="text" asp-for="Scope" class="form-control"></textarea>
            <span asp-validation-for="Scope" class="text-danger"></span>
        </div>
        <div class="form-group form-row">
            <label asp-for="SelectedStudent" class="text-dark">Student:</label><br />
            @Html.DropDownListFor(t => t.SelectedStudent, Model.Students, "--Select--", new { @class = "form-control" })
        </div>
        <div class="form-group form-row">
            <label asp-for="StudentQualifications" class="text-dark">Student Qualifications:</label>
            <textarea type="text" asp-for="StudentQualifications" class="form-control"></textarea>
            <span asp-validation-for="StudentQualifications" class="text-danger"></span>
        </div>
        <div class="form-group form-row">
            <label asp-for="SelectedReviewer" class="text-dark">Reviewer:</label><br />
            @Html.DropDownListFor(t => t.SelectedReviewer, Model.Reviewers, "--Select--", new { @class = "form-control" })
        </div>
        <div class="form-group align-items-center">
            <input type="submit" name="submit" class="btn btn-dark" value="Create" />
        </div>
    </form>
</div>
