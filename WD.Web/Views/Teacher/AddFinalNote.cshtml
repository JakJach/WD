@model AddFinalNoteViewModel;
@{
    ViewData["Title"] = "AGH VD | Add Final Note";
}

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Course" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Course" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Student" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Student" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group form-row">
        <label asp-for="Note" class="text-dark">Final Note:</label><br />
        @Html.DropDownListFor(t => t.Note, new SelectList(Model.Options), "--Select--", new { @class = "form-control" })
    </div>
    <div class="form-group align-items-center">
        <input type="submit" name="submit" class="btn btn-success" value="Submit" />
        <a asp-controller="Teacher" asp-action="Index" class="btn btn-dark">Cancel</a>
    </div>
</form>