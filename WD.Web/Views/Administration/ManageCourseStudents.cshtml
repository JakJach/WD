@model List<ManageUsersViewModel>
@{
    ViewData["Title"] = "AGH VD | ADMIN | Edit Course Students";
}
@{
    var courseId = ViewBag.courseId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Add or remove students from this course:</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].UserID" type="hidden" />
                    <input asp-for="@Model[i].UserName" type="hidden" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-dark" />
            <a asp-controller="Administration" asp-action="EditCourse" asp-route-id="@courseId" class="btn btn-dark">Cancel</a>
        </div>
    </div>
</form>